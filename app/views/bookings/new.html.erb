<h2>Finalize your booking!</h2>

<%= render 'flights/flight', flight: @flight %>

<br>OR

<h3>Selected flight information:</h3>
<p>Flight ID: <%= @flight.id %></p>
<p>Leaving From: <%= @flight.departure_airport.code %></p>
<p>Arriving At: <%= @flight.arrival_airport.code %></p>
<p>Departure Time: <%= @flight.time.strftime('%d/%m/%Y %I:%M%P') %></p>

<h3>Passenger information:</h3>

<%= form_with model: @booking, method: :post do |form| %>

  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
        <% @booking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :flight_id, value: @flight.id %>

  <%= form.fields_for :passengers do |subform| %>
    <fieldset>
      <legend>Passenger #<%= subform.index + 1 %></legend>
      <%= subform.label :name %>
      <%= subform.text_field :name, label: 'Passenger Name:', required: true %>
      <%= subform.label :email %>
      <%= subform.email_field :email, label: 'Passenger Email:', required: true %>
    </fieldset>
  <% end %>
  
  <%= form.submit 'Book!' %>
<% end %>

<br>OR<br><br>

<%= simple_form_for @booking do |form| %>
  <%= form.hidden_field :flight_id, value: @flight.id %>
  <%= form.fields_for :passengers do |subform| %>
    <h4>Passenger Details</h4>
    <%= subform.input :name, label: 'Passenger Name:', required: true %>
    <%= subform.input :email, label: 'Passenger Email:', required: true %>
  <% end %>
  <%= form.submit 'Create Booking' %>
<% end %>